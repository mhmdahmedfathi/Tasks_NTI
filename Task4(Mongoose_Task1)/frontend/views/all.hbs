{{>header}}
{{>navbar}}
<form method="post" action="delAll">
    <button class="btn btn-danger">delete all</button>
</form>
{{!-- <a href="delAll" class="btn btn-danger">delete all</a> --}}
<table class="table table-bordered my-4">
    <thead>
        <tr>
            <th>accNum</th>
            <th>Name</th>
            <th>Balance</th>
        </tr>
    </thead>

    <tbody>
        {{#if isEmpty}}
            <tr class="alert alert-danger text-center">
                <td colspan="4">No Accounts Yet</td>
            </tr>
        {{else}}
            {{#each allAccounts}}
            <tr>
                <td>{{this.accNum}}</td>
                <td>{{this.Name}}</td>
                <td>{{this.Balance}}</td>
                <td>
                    <a href="/single/{{this._id}}" class="btn btn-success mx-2">Show</a>
                    <a href="/addTransaction/{{this._id}}" class="btn btn-success mx-2">Add Transaction</a>
                    <a href="/edit/{{this._id}}" class="btn btn-warning mx-2">Edit</a>
                    <a href="/del/{{this._id}}" class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>
{{>footer}}